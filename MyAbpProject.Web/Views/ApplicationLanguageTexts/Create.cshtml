@using MyAbpProject
@using System.Threading;

<div class="modal fade" id="ApplicationLanguageTextCreateModal" tabindex="-1" role="dialog" aria-labelledby="ApplicationLanguageTextCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="ApplacationLanguageTextForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>@L("Create")@L("New")@L("ApplicationLanguageText")</span>
                    </h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label>@L("Source")</label>
                        <input type="text" name="Source" class="form-control" value="@MyAbpProjectConsts.LocalizationSourceName">
                    </div>

                    <div class="form-group">
                        <label>@L("LanguageName")</label>
                        <input type="text" name="LanguageName" class="form-control" value="@Thread.CurrentThread.CurrentCulture.Name">
                    </div>

                    <div class="form-group">
                        <label>@L("Key")</label>
                        <input type="text" name="Key" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>@L("Value")</label>
                        <input type="text" name="Value" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@L("Cancel")</button>
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> <span>@L("Create")</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
